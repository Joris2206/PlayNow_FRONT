{
  "name": "playnow",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev:web": "pnpm --filter ./apps/web dev -- -p 3001",
    "dev:admin": "pnpm --filter ./apps/admin dev -- -p 3000",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@types/node": "^20",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "lucide-react": "^0.541.0"
  }
}
